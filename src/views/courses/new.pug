extends ../layout

block content
  h1 Создать курс

  if error
    p(style="color:red")= error.message

  form(action=routes.courses(), method='POST')
    label Название:
    input(type='text', name='title', value=title)
    br

    label Описание:
    textarea(name='description')= description
    br

    input(type='submit', value='Создать')

