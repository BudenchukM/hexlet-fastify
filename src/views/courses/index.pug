extends ../layout

block content
  h1 Курсы

  a(href=routes.newCourse()) Добавить курс

  if courses.length === 0
    p Пока не добавлено ни одного курса
  else
    each course in courses
      div
        h2
          a(href=routes.course(course.id)) #{course.title}
        p #{course.description}

